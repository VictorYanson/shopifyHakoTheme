<div class="full-width">
  <div class="w-full h-screen flex items-center justify-center">
    <div class="circle-bg">
      <div class="circle-1">
        <div class="circle-2"></div>
      </div>
    </div>
    <h1>
      Hello World
    </h1>
  </div>
</div>

{% stylesheet %}
.circle-bg {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: end;
  width: 100%;
  height: 80%;
  overflow: hidden;
  top: 0;
  left: 0;
  z-index: -3;
  background-color: color-mix(in srgb, var(--main-color) 7%, transparent);
}

.circle-1 {
  aspect-ratio: 1 / 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 70%;
  background-color: color-mix(in srgb, var(--main-color) 7%, transparent);
  z-index: -2;
  border-radius: 1000px;
  margin-bottom: -40%;
}

.circle-2 {
  aspect-ratio: 1 / 1;
  width: 60%;
  background-color: color-mix(in srgb, var(--main-color) 7%, transparent);
  z-index: -1;
  border-radius: 1000px;
}
{% endstylesheet %}

