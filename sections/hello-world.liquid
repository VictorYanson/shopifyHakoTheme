<div class="full-width p-[20px]">
  <div class="w-full h-[800px] flex items-center justify-center">
    <div class="circle-bg">
      <div class="circle-1">
        <div class="circle-2"></div>
      </div>
    </div>
    <div class="flex flex-col items-center gap-[20px] pt-[90px]">
      <p class="text-[20px] font-[600] text-center">
        Lorem ipsum dolor sit amet
      </p>
      <h1 class="text-[48px] font-[600] text-center mb-[10px]">
        {{ page_title }}
      </h1>
      <button class="cursor-pointer btn">
        Discover Now
      </button>
      <img 
        class="mt-[10px]"
        src="{{ 'househero-1.png' | asset_url }}" 
        alt="" 
        width="300" 
        height="auto"
      />
    </div>
  </div>
</div>

{% stylesheet %}
.circle-bg {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: end;
  width: 100%;
  height: 65%;
  overflow: hidden;
  top: 0;
  left: 0;
  z-index: -3;
  background-color: color-mix(in srgb, var(--main-color) 10%, transparent);
}

.circle-1 {
  aspect-ratio: 1 / 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 65%;
  min-width: 600px;
  background-color: color-mix(in srgb, var(--main-color) 5%, transparent);
  z-index: -2;
  border-radius: 1000px;
  margin-bottom: -40%;
}

.circle-2 {
  aspect-ratio: 1 / 1;
  width: 65%;
  background-color: color-mix(in srgb, var(--main-color) 5%, transparent);
  z-index: -1;
  border-radius: 1000px;
}
{% endstylesheet %}

