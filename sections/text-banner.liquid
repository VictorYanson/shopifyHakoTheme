<div class="flex items-center justify-center relative w-full min-h-[500px] my-[200px]">
    <div class="image-bg absolute top-0 left-0 w-[100vw] h-full flex flex-col justify-center items-center text-center px-[30px]">
        {% if section.settings.background_image %}
            <img 
                src="{{ section.settings.background_image | img_url: 'large' }}"
                class="absolute top-0 left-0 object-cover -z-10" 
                alt=""
                width="100%" 
                height="100%"
            >
        {% else %}
            <img 
                src="{{ "bg-placeholder.jpg" | asset_url }}"
                class="absolute top-0 left-0 object-cover -z-10" 
                alt=""
                width="100%" 
                height="100%"
            >
        {% endif %}
        <h2 class="text-[white] text-[60px] w-[60%] min-w-[500px]">{{ section.settings.heading }}</h2>
    </div>
</div>

{% schema %}
{
    "name": "Text Banner",
    "settings": [
        {
        "type": "text",
        "id": "heading",
        "label": "Heading text",
        "default": "This is a collection of 20 background with blurry flowers"
        },
        {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
        }
    ]
}
{% endschema %}