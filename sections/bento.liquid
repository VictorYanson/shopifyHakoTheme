{% stylesheet %}


.gird-container {
    display: grid;
    grid-template-areas: 
        "box-1 box-3"
        "box-1 box-4"
        "box-2 box-4";
    gap: 2em;
    width: 100%;
    height: 800px;
    grid-template-columns: 50% 50%;
    grid-template-rows: 35% 30% 35%;
    margin: 200px 0;
    --bento-color: color-mix(in srgb, var(--main-color) 50%, transparent);
}

.box {
    background-color: var(--bento-color);
    border-radius: 10px;
    display: flex;
    justify-content: space-between;
    align-items: start;
    padding: 4rem;
    cursor: pointer;
}

.box:hover .shop-now {
    transform: translateX(2%);
}

.box h3 {
    font-size: 35px;
}

.gird-container .circle {
    aspect-ratio: 1 / 1;
    width: 30%;
    border-radius: 1000px;
    margin-top: 20px;
    position: absolute;
    bottom: 32%;
    right: 20%;
    z-index: -1;
    background-color: var(--bento-color);
}
{% endstylesheet %}